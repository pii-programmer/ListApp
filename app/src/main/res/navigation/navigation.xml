<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mvfvmr.presentation.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_remote"
        android:name="com.example.mvfvmr.presentation.RemoteFragment"
        tools:layout="@layout/fragment_remote" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.mvfvmr.presentation.SettingFragment"
        tools:layout="@layout/fragment_setting" />

</navigation><!--ナビゲーションとは、ユーザーがアプリ内で移動できる場所間の移動のこと-->
    <!--このnavigationファイルはnavGraphに格納される-->
    <!--startDestinationを指定しないとデスティネーションの始まりが無いことになり、inflateの際androidx.fragment.app.FragmentContainerViewを見つけられなくなる-->